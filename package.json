{
  "name": "markdoc",
  "version": "1.0.0",
  "description": "Beautiful markdown editor for academic papers.",
  "main": "main.js",
  "scripts": {
    "dev": "webpack --watch",
    "electron": "electron .",
    "test": "jest --coverage",
    "start": "npm-run-all --parallel dev electron",
    "precommit": "pretty-quick --staged",
    "clean": "rm -rf node_modules",
    "reinstall": "npm run clean && npm install",
    "package-mac":
      "webpack && electron-packager ./ Markdoc --out ./bin --platform darwin --arch x64  --overwrite --ignore=\"ignore|bin|node_modules\"",
    "package-win":
      "webpack && electron-packager . Markdoc --overwrite --asar=true --platform=win32 --arch=ia32 --prune=true --out=release-builds --ignore=\"ignore|bin|node_modules\"",
    "package-linux":
      "webpack && electron-packager . Markdoc --overwrite --asar=true --platform=linux --arch=x64  --prune=true --out=release-builds --ignore=\"ignore|bin|node_modules\""
  },
  "author": "PSIT Gruppe ",
  "repository": "https://github.engineering.zhaw.ch/vissejul/markdoc.git",
  "devDependencies": {
    "ajv": "^6.0.0",
    "babel-core": "^6.23.1",
    "babel-loader": "^7.1.4",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.23.0",
    "commonmark": "^0.28.1",
    "css-loader": "^0.28.10",
    "electron": "^1.4.15",
    "electron-devtools-installer": "^2.2.3",
    "electron-is-dev": "^0.3.0",
    "electron-packager": "^12.0.2",
    "electron-reload": "^1.1.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "extract-text-webpack-plugin": "^2.0.0-rc.3",
    "file-loader": "^ 1.1.11",
    "flux": "^3.1.3",
    "husky": "^0.14.3",
    "jest": "^22.4.3",
    "jest-sonar-reporter": "^2.0.0",
    "katex": "^0.9.0",
    "node-sass": "^4.7.2",
    "npm-run-all": "^4.1.2",
    "prettier": "1.11.1",
    "pretty-quick": "^1.4.1",
    "react-height": "^3.0.0",
    "react-test-renderer": "^16.3.1",
    "sass-loader": "^6.0.7",
    "style-loader": "^0.20.3",
    "webpack": "^2.2.1"
  },
  "jest": {
    "testResultsProcessor": "jest-sonar-reporter"
  },
  "jestSonar": {
    "reportPath": "reports"
  },
  "dependencies": {
    "moment": "^2.21.0",
    "react": "^16.3.2",
    "react-datepicker": "^1.3.0",
    "react-dom": "^16.3.2"
  },
  "build": {
    "appId": "your.id",
    "mac": {
      "category": "your.app.category.type"
    }
  }
}
